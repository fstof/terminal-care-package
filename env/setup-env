export LANG=en_US.UTF-8

# Software paths
export JAVA_HOME=$(/usr/libexec/java_home)
export JDK_HOME=$JAVA_HOME
export JRE_HOME=$JAVA_HOME
export ANDROID_HOME=$HOME/Library/Android/sdk

# Gitlab-CI build required
export KEYSTORE_PATH=$HOME/development/projects/mobile/signing/android/momentum.upload.jks
export KEYSTORE_PATH_DIST=$HOME/development/projects/mobile/signing/android/momentum.distribution.jks
export KEY_ALIAS=upload

# Setup PATH
export PATH=$ANDROID_HOME/tools:$PATH
export PATH=$ANDROID_HOME/tools/bin:$PATH
export PATH=$ANDROID_HOME/platform-tools:$PATH
export PATH=$HOME/.fastlane/bin:$PATH

# load nvm stuff
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# load rbenv stuff
eval "$(rbenv init -)"

export EDITOR='subl -w'
